# Multi-stage build for Platform Config Server
# Stage 1: Build with Maven
FROM maven:3.9.9-eclipse-temurin-21 AS builder

WORKDIR /build

# Copy parent POM and platform-common first (for better layer caching)
COPY pom.xml .
COPY platform-common/pom.xml platform-common/
COPY platform-common/src platform-common/src

# Copy config module
COPY platform-config/pom.xml platform-config/
COPY platform-config/src platform-config/src

# Build the project (skip tests for faster build)
RUN mvn clean package -pl platform-config -am -DskipTests

# Stage 2: Runtime
FROM eclipse-temurin:21-jre-alpine

WORKDIR /app

# Copy the built JAR from builder stage
COPY --from=builder /build/platform-config/target/platform-config-*.jar app.jar

# Expose port
EXPOSE 8888

# Set environment variables (can be overridden)
ENV GITLAB_TOKEN="" \
    GITLAB_REPO_URL=""

# Health check
HEALTHCHECK --interval=10s --timeout=5s --start-period=40s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:8888/actuator/health || exit 1

# Run the application
ENTRYPOINT ["java", \
    "-Djava.security.egd=file:/dev/./urandom", \
    "-jar", \
    "app.jar"]
